@model IEnumerable<Manager_Employee.Core.Employee>
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Employee List";
}

<div class="row">
        <h3>Employees</h3>
        <ul>
            @using (Html.BeginForm("Index", "Employee", FormMethod.Get, new { @class = "form-horizontal" }))
            {
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <li>
                            @Html.HiddenFor(i => item.emp_id)
                            @Html.ActionLink("View Details", "Details", "Employee", new { emp_id = item.emp_id }, new { @class = "btn btn-default btn-sm" })
                            @Html.ActionLink("Remove", "RemoveEmployee", "Manager", new { emp_id = item.emp_id }, new { @class = "btn btn-default btn-sm" })
                            @Html.ActionLink("Edit", "EditEmployee", "Employee", new { emp_id = item.emp_id }, new { @class = "btn btn-default btn-sm" })
                            @Html.DisplayFor(i => item.first_name)
                            @Html.DisplayFor(i => item.last_name)
                        </li>
                    }
                }
            }
        </ul>
</div>

